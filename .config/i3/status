general {
  colors = true
  interval = 5
}

order += "wireless _first_"
order += "battery all"
order += "load"
order += "tztime local"

wireless _first_ {
  format_up = "W: (%quality at %essid)"
  format_down = "W: down"
}

battery all {
  format = "%status %percentage %remaining"
  status_chr = "âš¡"
  status_bat = "ðŸ”‹"
  status_unk = "?"
  status_full = "â˜»"
  low_threshold = 10
}

tztime local {
  format = "%Y-%m-%d %H:%M"
}

load {
  format = "%1min"
}
